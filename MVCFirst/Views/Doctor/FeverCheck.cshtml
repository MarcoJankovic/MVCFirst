@{
    ViewData["Title"] = "FeverCheck";
}

<h1>Doctor</h1>
<div class="container">
    <div class="wrapper">
        <form asp-action="FeverCheck" asp-controller="Doctor" method="post" class="drform">
            <input class="drinput" type="number" placeholder="Check your temp" name="temp" value="" min="0" max="100" step="1" />
            <button type="submit" class="drbutton"><i class="fa-solid fa-temperature-low"></i></button>
            <p>
                @if (ViewBag.Msg != null)
                {
                    @ViewBag.Msg
                }
            </p>
        </form>
    </div>
</div>
