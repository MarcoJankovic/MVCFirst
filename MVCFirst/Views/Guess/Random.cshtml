
@{
    ViewData["Title"] = "Random";
}

<h1>Random</h1>

<div class="container">
    <div class="wrapper">
        <form asp-action="Random" asp-controller="Guess" method="post" class="rform">
            <input class="rInput" type="number" placeholder="Enter Number" name="nr" value="" min="0" max="100" step="1" />
            <button type="submit" class="rbutton">X</button>
            <p>
                @if (ViewBag.Msg != null)
                {
                    @ViewBag.Msg
                }
            </p>
        </form>
    </div>
</div>