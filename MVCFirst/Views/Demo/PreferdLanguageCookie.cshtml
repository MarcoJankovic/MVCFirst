@{
    ViewData["Title"] = "PreferdLanguageCookie";
}

<h1>Preferd Language Cookie</h1>
<p>Save so i don´t need to set it every time i visit this page </p>
<p>Current Language: @ViewBag.Language</p>

<form asp-action="SetLanguageCookie" method="post">

   <select name="Lang">
       <option value="swe">Swe</option>
        <option value="en">Eng</option>
        <option value="ro">Ro</option>
   </select>
    <button type="submit">Save Language Preferense</button>
</form>